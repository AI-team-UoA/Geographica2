<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xmx4g -classpath %classpath gr.uoa.di.rdf.Geographica.strabon.RunStrabon -h localhost -db geographica -p 5432 -u postgres -P postgres -r 1 -l tioa run MacroMapSearch</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xmx4g -classpath %classpath gr.uoa.di.rdf.Geographica.strabon.RunStrabon -h localhost -db geographica -p 5432 -u postgres -P postgres -r 1 -l tioa run MacroMapSearch</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xmx4g -classpath %classpath gr.uoa.di.rdf.Geographica.strabon.RunStrabon -h localhost -db geographica -p 5432 -u postgres -P postgres -r 1 -l tioa run MacroMapSearch</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
